{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    //"moduleResolution": "NodeNext",
    "lib": [
      "es2022"
    ],
    "outDir": ".",
    "rootDir": ".",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "cdk.out",
    "*.js"
  ]
}
